<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cropwiki">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <activity android:name="com.example.cropwiki.updateCropProfile"></activity>
        <activity android:name="com.example.cropwiki.cropDetail" />
        <activity android:name="com.example.cropwiki.presentation" />
        <activity android:name="com.example.cropwiki.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cropwiki.cropSearch"
            android:label="@string/search_crops"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.cropwiki.newProfile"
            android:label="@string/create_new_profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.cropwiki.updateProfile"
            android:label="Update Profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.cropwiki.MainMenu"
            android:label="Main menu"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.cropwiki.profileDetail"
            android:label="Profile Detail"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.cropwiki.existingProfile"
            android:label="@string/existing_profiles"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.cropwiki.allData"
            android:label="Show all Crops"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.cropwiki.addcrop"
            android:label="Add Crop"
            android:theme="@style/AppTheme" />
    </application>

</manifest>